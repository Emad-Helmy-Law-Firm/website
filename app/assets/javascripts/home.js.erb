//= require lib/slick

$(document).ready(function(){
  $("#services").height($("#div-banner-services").height() + 180)

  $("#div-testimonials").on('init', function(event, slick) {
    $("#testimonials").height($(".slick-active").height() + 191 + 91)
    $("#div-testimonials").height($(".slick-active").height() + 191)
    $(".slick-arrow").height($(".slick-active").height() - 91)
  })
  
  slick = $('#div-testimonials').slick({
    arrows: false
  })
  .on('beforeChange', function(event, slick, currentSlide, nextSlide) {
    $("#testimonials, #div-testimonials, .slick-arrow").height($("div").find(`[data-slick-index='${nextSlide}']`).height() + 191)
  });

  $("#arrow-left").click(function() {
    $("#div-testimonials").slick("slickPrev")
  })

  $("#arrow-right").click(function() {
    $("#div-testimonials").slick("slickNext")
  })
});
