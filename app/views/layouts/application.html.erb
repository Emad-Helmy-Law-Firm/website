<!DOCTYPE html>
<html>
  <head>
    <title>Emad Helmy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application' %>
    <%if asset_exists? "#{params[:controller]}.css" %>
      <%= stylesheet_link_tag params[:controller] %>
    <%end%>
    <%= javascript_include_tag 'application' %>
    <%if asset_exists? "#{params[:controller]}.js" %>
      <%= javascript_include_tag params[:controller] %>
    <%end%>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="icon" href="<%= image_path 'icon.ico' %>" type="image/ico" />
    <link rel="shortcut icon" href="<%= image_path 'icon.ico' %>" type="image/ico" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg border-0 bg-main py-0 ht-40">
      <div class="d-flex justify-content-end align-items-center w-100 h-100">
        <a href="#home" class="nav-item">Home</a>
        <a href="#about" class="nav-item">About Us</a>
        <a href="#services" class="nav-item">Services</a>
        <a href="#clients" class="nav-item">Our Clients</a>
        <a href="#contact" class="nav-item">Contact Us</a>
      </div>
    </nav>
    <div id="page-content">
      <%= render 'layouts/partials/alert' %>
      <%= yield %>
    </div>
  </body>
</html>